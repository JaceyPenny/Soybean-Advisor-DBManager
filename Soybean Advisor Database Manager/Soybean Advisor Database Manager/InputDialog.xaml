<Window x:Class="Soybean_Advisor_Database_Manager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="225" Width="398" Icon="Resources/Soybean512.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblPrompt" Content="Managment Text:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="371" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtDialog" Margin="10,36,13,51.5" TextWrapping="Wrap" TabIndex="1" Grid.ColumnSpan="2"/>
        <Button Content="Cancel" Margin="10,0,10,9.5" Click="Button_Click" Height="37" VerticalAlignment="Bottom" />
        <Button Content="OK" Margin="10,0,10,9.5" Grid.Column="1" Click="Button_Click" Height="37" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
